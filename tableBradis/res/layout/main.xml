<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/Page_background" android:weightSum="1">
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_bradis"
            android:id="@+id/main_button_autor_bradis" android:layout_gravity="center_horizontal" android:textColor="@color/Button_text"
            android:background="@drawable/button" android:layout_margin="5dp"
            android:clickable="true" android:focusable="false" android:focusableInTouchMode="false"
            android:singleLine="true" android:onClick="renderPageBradis" android:enabled="true"
            android:longClickable="false" android:layout_weight="0.33"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/menu_calc"
            android:id="@+id/main_button_calc" android:layout_gravity="center_horizontal"
            android:textColor="@color/Button_text" android:background="@drawable/button" android:layout_margin="5dp"
            android:clickable="true" android:focusable="false" android:focusableInTouchMode="false"
            android:singleLine="true" android:enabled="true" android:onClick="renderPageCalc"
            android:layout_weight="0.33"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/menu_history"
            android:id="@+id/main_button_history" android:layout_gravity="center_horizontal"
            android:textColor="@color/Button_text" android:background="@drawable/button" android:layout_margin="5dp"
            android:clickable="true" android:focusable="false" android:focusableInTouchMode="false"
            android:singleLine="true" android:enabled="true" android:onClick="renderPageHistory"
            android:layout_weight="0.33"/>
</LinearLayout>