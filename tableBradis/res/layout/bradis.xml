<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/Page_background" android:weightSum="1">
    <ImageView
            android:layout_width="159dp"
            android:layout_height="109dp"
            android:id="@+id/bradis_imageView" android:layout_gravity="center_horizontal"
            android:src="@drawable/bradisss"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bradis_v_m"
            android:id="@+id/bradis_textView" android:layout_gravity="center_horizontal"
            android:textColor="@color/Button_text" android:singleLine="true" android:textAlignment="center"
            android:textStyle="bold" android:padding="3dp" android:textSize="20dp"/>
    <ScrollView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:id="@+id/bradis_scrollView" android:layout_gravity="center_horizontal" android:layout_margin="10dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bradis_text_about"
                android:id="@+id/bradis_textView_opis" android:textColor="@color/Button_text"
                android:textIsSelectable="true"/>
    </ScrollView>
</LinearLayout>